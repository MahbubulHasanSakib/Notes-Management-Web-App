@page "/profile"
@model NotesManagementFrontend.Pages.ProfileModel
@using Newtonsoft.Json


@{ ViewData["Title"] = "Profile";

    Dictionary<string, string> userDetails = JsonConvert.DeserializeObject<Dictionary<string, string>>(Convert.ToString(ViewData["userDetails"])); }

<section>
  
         
        <div class="w-25 m-auto bg-black">
            <h3 class="text-center text-light p-2">Your Profile</h3>
        </div>
        <div class="card-body p-3">
            
            <div>
                @if (userDetails != null)
                {

                <form>
                    <div class="col-md-12">
                        <div class=" mb-3">
                            <label for="loginEmail" class="form-label">Full Name:       </label>
                            <input type="text" class="form-control" readonly value="@userDetails["fullName"]">
                        </div>
                    </div>
                    <div class="col-md-12">
                        <div class="p mb-3">
                            <label for="loginEmail" class="form-label">Email address:       </label>
                            <input type="text" class="form-control" readonly value="@userDetails["email"]">
                        </div>
                    </div>
                    <div class="col-md-12">
                        <div class="mb-3">
                            <label for="loginEmail" class="form-label">Birth Date:          </label>
                            <input type="text" class="form-control" readonly value="@userDetails["birthDate"]">
                        </div>
                    </div>
                    <div>
                        <input type="text" class="d-none" id="authorizeToken" readonly value="@ViewData["userDetails"]" />
                    </div>
                </form>
                    }
            </div>
        </div>
 

</section>

@section Scripts{
    
    <script type="module" src="~/js/saveNotesRequest.js"></script>
    <script type="module" src="~/js/searchNotesRequest.js"></script>
    <script type="module" src="~/js/todoUpdateRequest.js"></script>
}