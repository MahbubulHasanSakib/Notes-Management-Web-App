<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Notes Mangement App</title>
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />

    @* scripts *@
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-lg bg-black py-4">
            <div class="container">
                <a class="navbar-brand text-light" href="/">Notes Management App</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navMenu">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="collapse navbar-collapse" id="navMenu">
                    <ul class="navbar-nav ms-auto">

                        @{ if (ViewData["userDetails"] != null)
                            {
                    <li class="nav-item me-0">
                        <a class="nav-link text-light" asp-page-handler="profile">Profile</a>
                    </li>
                                    <li class="nav-item me-0">
                                        <a class="nav-link text-light" asp-page-handler="logout">Logout</a>
                                    </li>
 } }
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main style="min-height:75vh">
            @RenderBody()
        </main>
    </div>

    <footer class="bg-black py-4">
        <div class="container text-center">
           Copyright&copy;2022<br/>
           Developed By Mahbubul Hasan
        </div>
    </footer>

    @RenderSection("Scripts", required: false)
</body>
</html>
